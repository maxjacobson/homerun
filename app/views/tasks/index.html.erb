<h1>Listing tasks</h1>

<h2>Total Points: <%= Task.remaining_points %></h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Points</th>
      <th>Course</th>
      <th>Category</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.points %></td>
        <td><%= task.course.name %></td>
        <td><%= task.category.name %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
