<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Points</th>
      <th>Course</th>
      <th>Category</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% tasks.each do |task| %>
      <tr>
        <td>
          <%= task.name %>
        </td>
        <td><%= task.points %></td>
        <td><%= task.course.name %></td>
        <td><%= task.category.name %></td>
        <td>
          <% if task.complete? %>
            completed <%= time_ago_in_words task.completed_on %> ago
          <% else %>
            <%= link_to 'Complete', complete_task_path(task), method: :patch, data: { confirm: 'Are you sure? Great job!' }, class: "btn btn-success" %>
          <% end %>
        </td>
        <td><%= link_to 'Edit', edit_task_path(task), class: "btn btn-warning" %></td>
        <td><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
